<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activities.OneEventActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8AC2DC">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/back_button_dark"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck"/>

        <TextView
            android:id="@+id/textView51"
            android:layout_width="394dp"
            android:layout_height="271dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        </TextView>

        <ImageView
            android:id="@+id/imageView39"
            android:layout_width="391dp"
            android:layout_height="729dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category"
            app:srcCompat="@drawable/white_just_white" />

        <ImageView
            android:id="@+id/imageView41"
            android:layout_width="59dp"
            android:layout_height="61dp"
            android:layout_marginEnd="32dp"

            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/onlyGirlsTextview"
            android:layout_marginBottom="42dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/basketball" />

        <TextView
            android:id="@+id/eventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_bold"
            android:text="Event Name"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:layout_marginStart="23dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_back" />

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat"
            android:text="Category Name"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginStart="23dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventName" />

        <TextView
            android:id="@+id/onlyGirlsTextview"
            android:layout_width="228dp"
            android:layout_height="90dp"
            android:layout_marginTop="72dp"
            android:background="@drawable/greenaddeventfinal"
            android:elevation="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.793"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView39" />


        <TextView
            android:id="@+id/AgeInfo"
            android:layout_width="228dp"
            android:layout_height="90dp"
            android:layout_marginTop="180dp"
            android:textColor="@color/black"
            android:background="@drawable/greenaddeventfinal"
            android:elevation="15sp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.793"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView39" />

        <TextView
            android:id="@+id/TimeInfo"
            android:layout_width="228dp"
            android:layout_height="90dp"
            android:layout_marginTop="284dp"
            android:background="@drawable/greenaddeventfinal"
            android:elevation="15sp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.793"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView39" />

        <ImageView
            android:id="@+id/imageView43"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="92dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@+id/onlyGirlsTextview"
            app:layout_constraintHorizontal_bias="0.518"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView39"
            app:srcCompat="@drawable/restroom" />

        <ImageView
            android:id="@+id/imageView47"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="56dp"
            app:layout_constraintEnd_toStartOf="@+id/AgeInfo"
            app:layout_constraintHorizontal_bias="0.469"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView43"
            app:srcCompat="@drawable/birthday_cake" />

        <ImageView
            android:id="@+id/imageView49"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="52dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@+id/TimeInfo"
            app:layout_constraintHorizontal_bias="0.469"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView47"
            app:srcCompat="@drawable/calend" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="298dp"
            android:layout_height="20dp"
            android:layout_marginTop="104dp"
            android:progressDrawable="@drawable/custom_progress_background"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TimeInfo" />

        <TextView
            android:id="@+id/NumberPeople"
            android:layout_width="56dp"
            android:layout_height="38dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_semibold"
            android:text="4/10"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.943"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBar" />

        <TextView
            android:id="@+id/EndPeopleOrNotText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:fontFamily="@font/inter_semibold"

            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView49" />


        <TextView
            android:id="@+id/eventDescription"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="TextView"
            android:textColor="#6C6C6C"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBar" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/respondButton"
            android:layout_width="329dp"
            android:layout_height="72dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/blackbutton"
            android:text="Откликнуться"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>