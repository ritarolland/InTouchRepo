<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="32dp"
        android:background="@color/gray_back">



        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="InTouch"
            android:textColor='@color/light_blue_A400'
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/try_all_button"
            android:layout_width="match_parent"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="16dp"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.523"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:shapeAppearanceOverlay="@style/circular"
            app:srcCompat="@drawable/_614716489_120_p_fon_dlya_afishi_diskoteki_127"

            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Попробуй все"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="@+id/try_all_button"
            app:layout_constraintTop_toTopOf="@+id/try_all_button"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Все актуальные события"
            android:textColor="#BFB8B8"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/try_all_button"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="@+id/try_all_button"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Ищешь что-то конкретное?"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/try_all_button" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cosy_company_button"
            android:layout_width="160sp"
            android:layout_height="200sp"
            android:layout_marginTop="56dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/circular"

            android:layout_marginStart="7dp"



            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/try_all_button"
            app:srcCompat="@drawable/comfcompany"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/company"
            android:layout_width="112dp"
            android:layout_height="68dp"
            android:layout_marginBottom="72dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Уютная компания"
            android:textColor="#FFFFFF"
            android:textSize="20sp"

            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@+id/cosy_company_button"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/cosy_company_button" />

        <TextView
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Встреть рассвет под гитару"
            android:textColor="#BFB8B8"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="@+id/company"
            app:layout_constraintBottom_toBottomOf="@id/cosy_company_button" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/sports_button"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_marginTop="56dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/try_all_button"
            app:shapeAppearanceOverlay="@style/circular"
            app:srcCompat="@drawable/photo_1522040942177_269680274214"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/vocation"
            android:layout_width="123dp"
            android:layout_height="66dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/Vocation"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="@+id/sports_button"
            app:layout_constraintTop_toTopOf="@+id/sports_button" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Проведи время с пользой для здоровья"
            android:textColor="#BFB8B8"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="@+id/vocation"
            app:layout_constraintBottom_toBottomOf="@id/cosy_company_button" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/party_button"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="16dp"
            android:background="@color/black"
            android:scaleType="centerCrop"
            app:layout_anchor="@+id/textView11"

            app:layout_anchorGravity="top|center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cosy_company_button"
            app:shapeAppearanceOverlay="@style/circular"
            app:srcCompat="@drawable/aleksandr_popov_3_kh6xsu9xq_unsplash"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="115dp"
            android:layout_height="55dp"
            android:layout_marginBottom="84dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Шумные тусовки"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@+id/party_button"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="@+id/party_button" />

        <TextView
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Оторвись по полной"
            android:textColor="#BFB8B8"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="@+id/party_button"
            app:layout_constraintBottom_toBottomOf="@+id/party_button"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/culture_button"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            app:layout_anchorGravity="center"
            android:layout_marginEnd="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sports_button"
            app:shapeAppearanceOverlay="@style/circular"
            app:srcCompat="@drawable/photo_1524014482380_0988169f598d"

            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/inflate"
            android:layout_width="122dp"
            android:layout_height="66dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Расширяй кругозор"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_anchor="@+id/textView11"
            app:layout_anchorGravity="top|center"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="@+id/culture_button"
            app:layout_constraintTop_toTopOf="@+id/culture_button" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Посети музеи и театры"
            android:textColor="#BFB8B8"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/inflate"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/culture_button" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/other_button"
            android:layout_width="match_parent"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_height="170dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ignacio_brosa_vjdbpuxus_s_unsplash"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.437"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView17"
            app:shapeAppearanceOverlay="@style/circular"
             />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Другое"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="@+id/other_button"
            app:layout_constraintTop_toTopOf="@+id/other_button" />



        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Найди еще больше событий по душе"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/other_button"
            android:layout_marginStart="7dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/party_button"
            app:layout_constraintVertical_bias="0.09" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>